@model IList<WebApplication7.Models.Parrot>

@{
    ViewBag.Title = "Parrots";
}

<h2>Parrots</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (@Html.BeginForm("Parrots", "Cages"))
{
    <table class="table">
        <tr>
            <th>
                Cage
            </th>
            <th>
                Name
            </th>

            <th></th>
        </tr>

        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    @Html.EditorFor(item => item[i].Cage.Name)
                </td>
                <td>
                    @Html.EditorFor(item => item[i].Name)
                </td>
            </tr>
        }

    </table>

    <input type="submit" value="Save" />
}